<section data-section-type="faq" data-section-id="{{ section.id }}" class="page-width m_warranty_section">
  <div class="Container for_desktop">

    
    <div class="m_page_main">
      <!--    side menu nav code start    -->
      <div class="product-warranty-outer">
       <div class="product-warranty-sidebar">        
        {% for block in section.blocks  %}
        <div class="m_sidebar {% if forloop.first %} m_active {% endif %}" data-index="{{ forloop.index }}">
          {% if block.settings.title != blank %}
            <div class="Heading-merox">{{ block.settings.title }}</div>
          {% endif %}
        </div>
        {% endfor %}
       </div>
       <div class="m_accordions">
        {% for block in section.blocks %}
          <div class="m_contect_Furniture {% if forloop.first == true %} v_active {% endif %}" id="content_show{{ forloop.index }}">          
             <div class="careFAQ">
              <p class="faqHeading" style="margin-bottom: 10px;">{{ block.settings.title }}</p>
               {% for i in (1..10) %}
                {% capture question %}question{{ i }}{% endcapture %}
                {% capture answer %}answer{{ i }}{% endcapture %}
               {% if block.settings[question] != blank %}
                <div class="cstmAccordian">
                  <button class="m_accordion">
                   <span>{{ block.settings[question] }}</span>
                  </button>
                  <div class="m_panel">
                    <div style="margin: 10px 0;">{{ block.settings[answer] }}</div>
                  </div>
                </div>
              {% endif %}
              {% endfor %}
            </div>
          </div>
        {% endfor %}
      </div>
      </div>
      <!--    side menu nav code end    -->
    </div>
  </div>
</section>


<script>
  $(document).ready(function(){
      $('.m_sidebar').click(function(){
        var index = $(this).attr('data-index');
        $(this).addClass('m_active');
        $('.m_sidebar').not(this).removeClass('m_active');
        $('.m_contect_Furniture').removeClass('v_active');
        $('#content_show'+index).addClass('v_active');
      });

      $('.m_accordion').click(function(){
        $(this).parent().find('.m_panel').slideToggle();
        $(this).toggleClass('active');
        $('.m_accordion').not(this).parent().find('.m_panel').slideUp();
        $('.m_accordion').not(this).removeClass('active');
      });

  });
</script>

