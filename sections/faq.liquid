<style>
  .m_text_medium {
    font-size: 18px;
    margin:4px 0px;
  }
  .m_warranty_section {
    margin-top: 60px;
  }
  .m_page_main {
    margin-top: 60px;
  }
  .m_sidebar ul {
    list-style: none;
  }
  .product-warranty-outer {
    position: relative;
    height: 100%;
  }
  .m_sidebar ul li {
    padding: 10px;
  }
  .m_page-header .Heading {
    color: {{ section.settings.heading_color }};
    text-transform: uppercase;
    letter-spacing: .125em;
    text-align: center;
    font-weight: bold;
  }
  .product-warranty-outer {
    margin-bottom: 40px;
  }
  .u-h1{
    font-weight: bold;
    font-size: 22px;
  }
 .m_contect_Furniture {
    display: none;
  }
  .m_contect_Furniture.v_active {
    display: block;
  }
  .meroxWhiteBackground {
    background: white !important;
  }
  .m_accordion {
    background-color: white;
    cursor: pointer;
    padding: 10px 0;
    width: 100%;
    text-align: left;
    border: none;
    outline: none;
    transition: 0.4s;
    position: relative;
    font-family: var(--font-heading-family);
    font-style: var(--font-heading-style);
    font-size: calc(var(--font-heading-scale) * 1.5rem);
  }
  .m_accordion.active:after {
    transform: translateY(35%) rotate(-225deg);
  }
  .m_accordion:after {
    position: absolute;
    right: 0.71428571rem;
    height: 0.71428571rem;
    width: 0.71428571rem;
    content: "";
    display: block;
    border-left: 0.14285714rem solid {{ section.settings.faq_icon_color }};
    border-bottom: 0.14285714rem solid {{ section.settings.faq_icon_color }};
    top: 50%;
    margin-top: -1rem;
    transform: translateY(35%) rotate(-45deg);
    transition: transform .05s linear;
  }
  .m_panel {
    background-color: white;
    display: none;
    font-size: 14px;
  }
  .sub_heading_rp p { 
    text-align:center;
    margin: 0 auto 30px;
    max-width: 650px;
  }
  h3.careTitle {
    font-size: 20px;
    margin: 15px 0;
    text-transform: uppercase;
  }
  span.greenBorder {
    position: absolute;
    border-bottom: 4px solid black;
    width: 40px;
  }
  .careDescription {
    margin: 40px 0;
    font-size: 15px;
  }
  .m_sidebar {
    cursor: pointer;
    padding: 10px 20px;
    color: {{ section.settings.tab_color }};
    font-weight: 600;
    font-family: var(--font-heading-family);
    font-style: var(--font-heading-style);
    font-size: calc(var(--font-heading-scale) * 1.5rem);
    text-transform: uppercase;
    text-decoration: none;

  }
  .m_sidebar.m_active {
    color: #1a1a1a;
    font-weight: 600;
       font-family: var(--font-heading-family);
    font-style: var(--font-heading-style);
    font-size: calc(var(--font-heading-scale) * 1.5rem);
    text-transform: uppercase;
    text-decoration: none;

  }
  .m_sidebar:hover {
    background-color: {{ section.settings.tab_hover }};
}
  .product-warranty-outer {
    margin-bottom: 40px;
    display: flex;
    gap: 50px;
  }
  .m_accordions {
    flex: 1;
    padding: 10px 0;
  }
  .product-warranty-sidebar::-webkit-scrollbar {
    width: 5px;
    height: 5px;
    margin-left: 0.5rem;
  }
  .product-warranty-sidebar::-webkit-scrollbar-track {
    background: transparent;
    border:1px solid #dfdfdf;
  }
  .product-warranty-sidebar::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 10rem;
  }
  .product-warranty-sidebar::-webkit-scrollbar-corner {
    display: none;
  }
  .product-warranty-sidebar::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
  .m_page-header {
    background: {{ section.settings.heading_background }};
    width: 100%;
    padding: 3em 20px 2em;
  }
  .m_accordion {
    color: {{ section.settings.question_color }};
    font-family: var(--font-heading-family);
    font-style: var(--font-heading-style);
    font-size: calc(var(--font-heading-scale) * 1.5rem); 
    text-transform: uppercase;
    text-decoration: none;
  }
  .m_panel * {
    color: {{ section.settings.answer_color }};
    letter-spacing: .02em;
  }
  .faqHeading {
    color: {{ section.settings.faq_heading_color }} ;
    font-weight: 600;
    font-family: var(--font-heading-family);
    font-style: var(--font-heading-style);
    font-size: calc(var(--font-heading-scale) * 1.5rem);
    text-transform: uppercase;
    text-decoration: none;

  }
  .m_accordion span {
    padding-right: 16px;
  }
 @media only screen and (max-width: 799px) {
   .content_head_h {
     font-size: 20px !important;
   }
   .m_page-header p {
     text-align: justify;
   }
   .product-warranty-outer {
     flex-direction: column;
   }
   .m_sidebar {
     padding: 0 5px 10px;
     flex-shrink: 0;
   }
   .product-warranty-sidebar {
    display: flex;
    overflow-x: auto;
    gap: 10px;
  }
 }
</style>
